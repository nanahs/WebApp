@{
    ViewData["Title"] = "Create Event";
}

<br />
<div class="container">
    <div class="col-md-offset-2 col-md-8 col-lg-8 col-lg-offset-2 col-sm-8 col-sm-offset-2">
        <div class="panel" style="border: 1px solid lightgray;">
            <div class="panel-body">
                <form class="form-horizontal row" asp-controller="Create" asp-action="MakeUniversity" method="post">
                    <div class="form-group">
                        <label class="control-label col-md-3">Name:</label>
                        <input type="text" class="form-control col-md-6" name="name" />
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3">Abbreviation:</label>
                        <input type="text" class="form-control col-md-6" name="date" />
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3">Location:</label>
                        <input type="text" class="form-control col-md-6" name="loc" />
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3">Description:</label>
                        <input type="text" class="form-control col-md-6" name="desc" />
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3">Category:</label>
                        <input type="text" class="form-control col-md-6" name="categ" />
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3">Category:</label>
                        <input type="email" class="form-control col-md-6" name="email" />
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3">Category:</label>
                        <input type="text" class="form-control col-md-6" name="phone" />
                    </div>
                    <button type="submit" class="btn btn-info">Create</button>
                </form>
            </div>
        </div>

    </div>
</div>